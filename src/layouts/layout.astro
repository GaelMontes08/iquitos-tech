---
import '@fontsource-variable/inter';
import Header from "@/components/Header.astro"
import ImagesCard from "@/components/ImagesCard.astro"
import Facebook from '@/icons/Facebook.astro';
import Instagram from '@/icons/Instagram.astro';
import Tiktok from '@/icons/Tiktok.astro';
import Whatsapp from '@/icons/Whatsapp.astro';
import Services from '@/components/Services.astro';
import Contact from '@/components/Contact.astro';
---

<html lang="es">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/logo.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <meta name="description" content="En Iquitos Tech entendemos lo crucial que es mantener tus dispositivos tecnológicos en óptimas condiciones. Estamos aquí para ayudarte.">
        <title>Iquitos Tech - Reparaciones Tech</title>
    </head>
    <body class="mx-auto lg:w-[1200px]">
<!--         <div class="absolute top-0 z-[-2] h-screen w-screen bg-white bg-[radial-gradient(100%_50%_at_50%_0%,rgba(0,163,255,0.13)_0,rgba(0,163,255,0)_50%,rgba(0,163,255,0)_100%)]"></div> -->
        <Header />
        <main>
            <section class="w-full mx-auto lg:w-[1300px] py-20 grid grid-cols-1 md:grid-cols-2 gap-28 md:pl-16 ">
                <div class="md:pt-28">
                    <h1 class="text-black text-7xl font-bold flex flex-row pb-5 text-center md:text-start md:justify-start justify-center">Iquitos Tech</h1>
                    <p class="flex flex-row text-center md:text-start mx-6">
                        <span class=" text-xl opacity-80">Somos tu solución <span class="text-blue-700 font-bold">confiable</span> y rápida para todos tus <span class=" font-bold">problemas tecnológicos.</span></span>
                    </p>
                    <ul class="md:flex grid md:gap-x-2 my-6 justify-center md:justify-start">
                        <li>
                            <a href="https://www.facebook.com/profile.php?id=61557903596714" class="w-32 rounded-full border border-stone-700 flex justify-center items-center gap-x-2 py-2 px-2 bg-white hover:scale-110 hover:bg-blue-100 transition" target="_blank" rel="noopener noreferrer">
                                <Facebook class="w-6 h-6" />
                                Facebook</a>
                        </li>
                        <li>
                            <a href="https://www.instagram.com/iquitostech/" class="w-32 rounded-full border mt-2 md:mt-0 border-stone-700 flex justify-center items-center gap-x-2 py-2 px-2 bg-white hover:scale-110 hover:bg-blue-100 transition" target="_blank" rel="noopener noreferrer">
                                <Instagram class="w-6 h-6" />
                                Instagram</a>
                        </li>
                        <li>
                            <a href="https://www.tiktok.com/@iquitostech" class="w-32 rounded-full border md:mt-0 mt-2 border-stone-700 flex justify-center items-center gap-x-2 py-2 px-2 bg-white hover:scale-110 hover:bg-blue-100 transition" target="_blank" rel="noopener noreferrer">
                                <Tiktok class="w-6 h-6" />
                                Tik Tok</a>
                        </li>
                        <li>
                            <a href="https://wa.me/917811803" class="w-32 rounded-full border border-stone-700 flex justify-center md:mt-0 mt-2 items-center gap-x-2 py-2 px-2 bg-white hover:scale-110 hover:bg-blue-100 transition" target="_blank" rel="noopener noreferrer">
                                <Whatsapp class="w-6 h-6" />
                                Whatsapp</a>
                        </li>
                    </ul>
                </div>
                <ImagesCard/>
            </section>
            <section class="w-full mx-auto lg:w-[1200px]">
                <Services />
            </section>
            <section class="w-full mx-auto lg:w-[1200px]">
                <Contact />
            </section>
        </main>
    </body>
</html>

<style is:global>
    :root {
        color-scheme: light;
    }

    html {
        font-family: 'Inter Variable', sans-serif;;
    }

    body {
        display: flex;
        flex-direction: column;
    }
</style>