<style>

    .frame-limit {
        overflow: hidden;
        position: relative;
        display: flex;
        gap: 10px;
        align-items: center;
        flex-wrap: nowrap;
        flex-direction: column;
        flex: none;
        height: min-content;
        justify-content: center;
        border-radius: 40px;
        border-radius: 16px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(6.4px);
        -webkit-backdrop-filter: blur(6.4px);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .blurred-circle {
        aspect-ratio: 1 / 1;
        background-color: rgba(0, 153, 255, 0.13);
        border-radius: 8000px;
        bottom: -600px;
        filter: blur(100px);
        flex: none;
        height: 1072px;
        left: 50%;
        overflow: hidden;
        position: absolute;
        transform: translate(-50%);
        width: 1072px;
        will-change: var(--framer-will-change-override, transform);
        z-index: -1;
    }

    .content-flex {
        align-items: flex-start;
        display: flex;
        flex: none;
        flex-direction: column;
        flex-wrap: nowrap;
        height: min-content;
        justify-content: flex-start;
        overflow: visible;
        position: relative;
        width: 100%;
    }

    .contact {
        display: flex;
        align-items: center;
    }

    .contact-btn {
        cursor: pointer;
        text-decoration: underline;
        text-decoration-thickness: 0.05em;
        text-underline-offset: 0.25em;
        line-height: 130%;
        letter-spacing: -0.02em;
        color: #444638;
        font-size: 20px;
        border-radius: 80em;
        background-color: black;
        border: 0.125rem solid black;
        text-align: center;
        text-decoration: none;
        transition: background-color 0.2s ease, border-color 0.2s ease,
            color 0.2s ease, fill 0.2s ease, transform 0.2s ease-in-out;
        cursor: pointer;
        overflow: hidden;
        will-change: transform;
        padding: 10px 20px;
        display: inline-block;
    }

    .contact-btn:hover {
        background-color: white;
        border-color: white;
        transition: background-color 0.2s ease, border-color 0.2s ease,
            color 0.2s ease, fill 0.2s ease, transform 0.2s ease-in-out;
        transform: scale(1.07);
        will-change: transform;
        color: black;
    }

    .contact-btn:after {
        content: "";
        display: block;
        height: 100%;
        width: 100%;
        position: absolute;
        left: 0;
        top: 0;
        transform: translate(-100%) rotate(10deg);
        transform-origin: top left;
        transition: background-color 0.2s ease, border-color 0.2s ease,
            color 0.2s ease, fill 0.2s ease, transform 0.2s ease-in-out;
        will-change: transform;
        z-index: -1;
        border-radius: 80em;
        background-color: white;
    }

    .contact-btn:hover:after {
        transform: translate(0);
        z-index: 0;
    }
    
    .contact-btn > * {
        position: relative;
        z-index: 1;
    }

    .Button__inner {
        color: white;
    }
    
    .contact-btn:hover .Button__inner {
        color: black;
    }

    .separator {
        flex: none;
        height: 1px;
        overflow: visible;
        position: relative;
        width: 100%;
    }

    li {
        border-radius:     0;
        margin:    0; 
        font-family:    inherit; 
        font-size:    inherit; 
        line-height:    inherit;
        overflow:   visible;
        text-transform:  none;
        -webkit-appearance: button;
    }

    .btn-link {
        display:  inline-block; 
        font-weight:  bold; 
        color:  black; 
        -webkit-user-select:  none; 
        -moz-user-select:  none; 
        -ms-user-select:  none; 
        user-select:  none; 
        border:  0; 
        border-radius:  4rem; 
        transition:  all .2s ease-out;  
        white-space: nowrap;  
        margin-bottom: 1rem;  
        box-shadow: 2px 1px 2px rgba(180,180,180,.7),inset 3px 2px 5px rgba(255,255,255,1);
    }

    li a:not(:disabled) { 
        cursor: pointer;
    } 

    .btn-link:hover { 
        color:  white; 
        background-color: rgb(26, 71, 196); 
        box-shadow: -2px -1px 2px rgba(180,180,180,.3),inset -3px -2px 3px rgb(26, 71, 196);
    }

    .btn-link:not(:disabled):not(.disabled) { 
        cursor: pointer;
    } 

    .btn-link {
        margin:  0px 2px 0 0; 
        z-index:  1499;
        left: 1rem; 
    }

    .btn-link:hover,.btn-link:active  { 
        color: white; 
        background-color: rgb(26, 71, 196); 
        box-shadow: -2px -1px 2px rgba(180,180,180,.3),inset -3px -2px 3px rgb(26, 71, 196);
    } 

    @media (max-width: 500px) {
        .contact-btn {
            font-size: 16px;
        }
    } 

    @media (min-width: 501px) {
        .redes-links {
            align-items: flex-start;
            display: flex;
            flex: none;
            flex-direction: row;
            flex-wrap: nowrap;
            gap: 64px;
            height: min-content;
            justify-content: flex-start;
            overflow: visible;
            position: relative;
            width: 100%;
        }
    } 
</style>